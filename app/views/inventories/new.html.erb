<p><%= notice %></p>

<h1>Add Inventory Item</h1>

<%= form_for @inventory do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
